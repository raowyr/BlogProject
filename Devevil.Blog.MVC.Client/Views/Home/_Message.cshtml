@model Devevil.Blog.MVC.Client.Models.MessageViewModel

<div id="formSendMessage" class="6u 12u(mobile)">
	<section>
        @using (Ajax.BeginForm("SendMessage", new AjaxOptions() { 
            UpdateTargetId = "formSendMessage"
        }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
		    <div class="row 50%">
			    <div class="6u 12u(mobile)">
                    @Html.TextBoxFor(m => m.Name, new { @placeholder="Nome" })
                    @Html.ValidationMessageFor(m => m.Name) <br />
				    @*<input name="name" placeholder="Name" type="text" />*@
			    </div>
			    <div class="6u 12u(mobile)">

				    <input name="email" placeholder="Email" type="text" />
			    </div>
		    </div>
		    <div class="row 50%">
			    <div class="12u">
               
				    <textarea name="message" placeholder="Message"></textarea>
			    </div>
		    </div>
		    <div class="row 50%">
			    <div class="12u">
                        <input class="form-button-submit button icon fa-envelope" type="submit" value="Invia messaggio" />
				    <a href="Home/SendMessage" id="btnSendMessage" class="form-button-submit button icon fa-envelope" type="">Send Message</a>
			    </div>
		    </div>
        }
	</section>
</div>
