@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section content{
<div id="main">
    <!-- Post -->
    <article class="post">
        <header>
            <div class="title">
                <h2><a href="#">Backend del Blog</a></h2>
            </div>
        </header>
        <p>Oggi è il giorno: @DateTime.Today.ToShortDateString()</p>
        <p>Sono le ore: @DateTime.Now.TimeOfDay.ToString()</p>
        <footer>
            <ul class="actions">
                <li><button name="Logout" value="Login" class="button big" onclick="location.href = '/Manage/Logout'">Logout</button></li>
            </ul>
        </footer>
    </article>

</div>   
}